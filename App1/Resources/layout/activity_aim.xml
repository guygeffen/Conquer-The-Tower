<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

     <TextView
        android:id="@+id/textViewAzimuth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Azimuth: 0°"
        android:textSize="18sp"
        android:paddingBottom="16dp"/>

    <SeekBar
        android:id="@+id/seekBarAzimuth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="360"
        android:progress="0"
        android:paddingBottom="16dp"/>

    <TextView
        android:id="@+id/textViewInclination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inclination: 0°"
        android:textSize="18sp"
        android:paddingBottom="16dp"/>

    <SeekBar
        android:id="@+id/seekBarInclination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="90"
        android:progress="0"
        android:paddingBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">
    <Button
        android:id="@+id/buttonSetAim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Aim"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"/>
    <Button
        android:id="@+id/buttonShoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shoot"
        android:layout_weight="1"
        android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>
